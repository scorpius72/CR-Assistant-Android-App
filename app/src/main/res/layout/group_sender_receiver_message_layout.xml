<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="30dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        android:layout_alignParentStart="false"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:visibility="gone"
        android:id="@+id/sender_group_relative_layout"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/sender_profile_picture_in_group"
                ></de.hdodenhof.circleimageview.CircleImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sender_profile_picture_in_group"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="15dp"
                    android:id="@+id/sender_name_in_group"
                    android:textColor="?attr/colorAccent"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am the message"
                    android:layout_marginTop="2dp"
                    android:id="@+id/sender_message_in_group"
                    android:visibility="gone"
                    ></TextView>
                <TextView
                    android:layout_width="250dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:text="I am the message"
                    android:layout_marginTop="2dp"
                    android:id="@+id/sender_message_in_group_max"
                    ></TextView>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="8dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:id="@+id/receiver_group_relative_layout"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorBlue"
            android:layout_marginRight="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i am the man"
                android:layout_margin="7dp"
                android:id="@+id/receiver_message_in_group"
                android:visibility="gone"
                ></TextView>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="i am the man"
                android:layout_margin="7dp"
                android:id="@+id/receiver_message_in_group_max"
                android:visibility="gone"></TextView>

        </androidx.cardview.widget.CardView>



</RelativeLayout>