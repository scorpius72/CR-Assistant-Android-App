<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileSetting">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="?attr/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:civ_border_width="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_image_view"
        android:layout_marginTop="20dp"
        android:text="upload Image"
        android:textColor="?attr/colorAccent"
        android:id="@+id/image_browse_button"
        android:background="@drawable/round_border"
        ></Button>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/round_border"
        android:id="@+id/profile_name"
        android:layout_below="@+id/image_browse_button"
        android:layout_margin="20dp"
        android:hint="Enter your name"
        android:textColorHint="?attr/colorAccent"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/round_border"
        android:id="@+id/profile_department"
        android:layout_below="@+id/profile_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter department name"
        android:textColorHint="?attr/colorAccent"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/round_border"
        android:id="@+id/profile_varsity"
        android:layout_below="@+id/profile_department"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="Enter varsity name"
        android:textColorHint="?attr/colorAccent"
        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_varsity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:id="@+id/submit_button"
        android:textColor="?attr/colorAccent"
        android:background="@drawable/round_border"
        ></Button>

</RelativeLayout>