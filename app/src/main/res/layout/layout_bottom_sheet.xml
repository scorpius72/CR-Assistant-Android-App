<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bottom_sheet_background"
    android:id="@+id/bottomSheetContainer"
    android:orientation="vertical">

    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:background="?attr/colorAccent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        ></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select One.."
        android:textSize="20sp"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="5dp"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CT"
            android:padding="3dp"
            android:layout_weight="1"
            android:id="@+id/radio_button_for_ct"
            >
        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment"
            android:padding="3dp"
            android:layout_weight="1"
            android:id="@+id/radio_button_for_assignment"
            >
        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:padding="3dp"
            android:layout_weight="1"
            android:id="@+id/radio_button_for_others"
            >
        </RadioButton>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_round_shape"
        android:padding="15dp"
        android:hint="Enter Couser Number:(ex. cse-2101)"
        android:id="@+id/course_number_edit_text"
        android:layout_marginBottom="5dp"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_round_shape"
        android:padding="15dp"
        android:hint="Enter Time:(ex. 04:30pm)"
        android:id="@+id/course_time_edit_text"
        android:layout_marginBottom="5dp"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_round_shape"
        android:padding="50dp"
        android:id="@+id/course_details_edit_text"
        android:hint="Enter the Details about the exam:(ex. topic or chapter number etc..)"
        ></EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_new"
        android:text="submit"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/submit_button_calender_view"

        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        ></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>